{% comment %} Base.css {% endcomment %}
/* Brand colors */
/* Dark background with light text (solid button label) */
.color-brand-1 {
  --color-foreground: var(--color-base-solid-button-labels);
  --color-background: var(--color-brand-background-1);
  --gradient-background: var(--color-base-brand-1);
}

/* Dark background with light text (solid button label) */
.color-brand-2 {
  --color-foreground: var(--color-base-solid-button-labels);
  --color-background: var(--color-brand-background-2);
  --gradient-background: var(--color-base-brand-2);
}

/* Light background with dark text */
.color-brand-3 {
  --color-foreground: var(--color-base-text);
  --color-background: var(--color-brand-background-3);
  --gradient-background: var(--color-base-brand-3);
}

/* Light background with dark text */
.color-brand-4 {
  --color-foreground: var(--color-base-text);
  --color-background: var(--color-brand-background-4);
  --gradient-background: var(--color-base-brand-4);
}

/* Dark background with light text (solid button label) */
.color-brand-5 {
  --color-foreground: var(--color-base-solid-button-labels);
  --color-background: var(--color-brand-background-5);
  --gradient-background: var(--color-base-brand-5);
}

